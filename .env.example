# =============================================================================
# SCASI/DCMS Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   copy .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# SECURITY WARNING: Generate a new secret key for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE_ME_IN_PRODUCTION

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Example: ALLOWED_HOSTS=localhost,127.0.0.1,example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# MySQL/MariaDB connection settings
DB_NAME=dcms_db
DB_USER=root
DB_PASSWORD=123
DB_HOST=localhost
DB_PORT=3306

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Example: CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000
